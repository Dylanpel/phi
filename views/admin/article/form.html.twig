{% extends 'layout.html.twig' %}

{% block title %}
  {{ article is defined ? 'Modifier l\'article' : 'Créer un article' }}
{% endblock %}

{% block content %}
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-header">
          <h4 class="mb-0">
            {{ article is defined ? 'Modifier l\'article' : 'Créer un article' }}
          </h4>
        </div>
        
        <div class="card-body">
          <form method="post" action="{{ action ?? '' }}">
          
            <!-- TITLE -->
            <div class="mb-3">
              <label for="title" class="form-label">Titre</label>
              <input 
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
                value="{{ article.title ?? '' }}"
              >
            </div>  

            <!-- SLUG -->
            <div class="mb-3">
              <label for="slug" class="form-label">Slug (non modifiable)</label>
              <input 
                type="text"
                class="form-control"
                id="slug"
                name="slug"
                readonly
                required
                value="{{ article.slug ?? '' }}"
              >
            </div>

            <!-- DATE -->
            <div class="mb-3">
              <label for="date" class="form-label">Date de publication</label>
              <input 
                type="date"
                class="form-control"
                id="date"
                name="date"
                required
                value="{{ article.date ?? '' }}"
              >
            </div>
            
            <!-- CONTENT -->
            <div class="mb-3">
              <label for="content" class="form-label">Contenu</label>
              <textarea 
                class="form-control"
                id="content"
                name="content"
                rows="6"
                required
              >{{ article.content ?? '' }}</textarea>
            </div>

            <!-- IMAGE URL -->
            <div class="mb-3">
              <label for="imageUrl" class="form-label">URL de l'image</label>
              <input 
                type="text"
                class="form-control"
                id="imageUrl"
                name="image_url"
                value="{{ article.imageUrl ?? '' }}"
              >
            </div>

            <div class="d-flex justify-content-between">
              <button type="submit" class="btn btn-primary">
                {{ article is defined ? 'Mettre à jour' : 'Créer' }}
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block scripts %}
  <script src="https://cdn.tiny.cloud/1/{{tiny_key}}/tinymce/8/tinymce.min.js" referrerpolicy="origin"></script>
  <script src="js/slug.js"></script>
  <script src="js/tinymce-init.js"></script>
{% endblock %}