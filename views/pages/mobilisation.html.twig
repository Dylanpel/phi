  <div class="container text-center">
    <a href="#" class="btn btn-success btn-lg rounded-pill px-5 me-2">Don</a>
    <a href="#" class="btn btn-outline-success btn-lg rounded-pill px-5">Bénévole</a>
  </div>
</section>

